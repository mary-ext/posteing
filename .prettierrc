{
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 110,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
	"tailwindFunctions": ["tw"],
	"importOrder": [
		"^node:",
		"<THIRD_PARTY_MODULES>",
		"^@(atcute|mary)/",
		"^~/api/",
		"^~/globals/",
		"^~/lib/",
		"^~/components/",
		"^~/views/",
		"^~/assets/",
		"^~",
		"^\\.{2}(?:/(?:.*)(?<!\\.css))?$",
		"^\\.(?:/(?:.*)(?<!\\.css))?$",
		"^\\."
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": ["tsconfig.json", "jsconfig.json"],
			"options": {
				"parser": "jsonc"
			}
		}
	]
}
